{
	"name": "wlosiara-pl-products-service",
	"version": "0.0.0",
	"description": "wlosiara.pl - Products service",
	"main": "./src/main.ts",
	"scripts": {
		"start": "node ./dist/src/main.js",
		"test": "jest --passWithNoTests --coverage",
		"compile": "tsc",
		"dev": "ts-node-esm ./src/main.ts",
		"dev:watch": "nodemon --watch ./src --exec ts-node-esm ./src/main.ts",
		"generate-openapi": "ts-node-esm ./scripts/generate_openapi/main.ts",
		"jest:check": "jest --passWithNoTests --coverage",
		"jest:check:unit": "jest --testRegex='.+\\.unit\\.test\\.(?:[mc]?js|ts)$' --passWithNoTests --coverage",
		"jest:check:int": "jest --testRegex='.+.\\int.test\\.(?:[mc]?js|ts)$' --passWithNoTests --coverage",
		"prettier:fix": "prettier --write .",
		"prettier:check": "prettier --check .",
		"eslint:fix": "eslint --fix .",
		"eslint:check": "eslint --max-warnings 0 .",
		"typescript:check": "tsc --noEmit",
		"npm-audit:check": "npm audit --audit-level=low",
		"npm-audit:fix": "npm audit fix",
		"formatting:fix": "prettier --write .",
		"formatting:check": "prettier --check .",
		"compile:check": "tsc --noEmit",
		"hadolint:check": "hadolint --failure-threshold=ignore Dockerfile"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/projekt-zespolowy-ALR/products-service.git"
	},
	"author": "wlosiara.pl",
	"license": "UNLICENSED",
	"private": true,
	"bugs": {
		"url": "https://github.com/projekt-zespolowy-ALR/products-service/issues"
	},
	"homepage": "https://github.com/projekt-zespolowy-ALR/products-service#readme",
	"devDependencies": {
		"@nestjs/testing": "^9.2.0",
		"@types/jest": "^29.2.4",
		"@types/node": "^18.11.18",
		"@types/uuid": "^9.0.0",
		"@typescript-eslint/eslint-plugin": "^5.47.0",
		"@typescript-eslint/parser": "^5.54.1",
		"dotenv": "^16.0.3",
		"eslint": "^8.30.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-jest": "^27.1.7",
		"jest": "^29.3.1",
		"nodemon": "^2.0.20",
		"prettier": "^2.8.1",
		"testcontainers": "^9.1.1",
		"ts-jest": "^29.0.3",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.4"
	},
	"dependencies": {
		"@nestjs/common": "^9.1.6",
		"@nestjs/core": "^9.1.6",
		"@nestjs/platform-fastify": "^9.1.6",
		"@nestjs/swagger": "^6.1.4",
		"@nestjs/typeorm": "^9.0.1",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.0",
		"envalid": "^7.3.1",
		"nest-typed-config": "^2.4.6",
		"pg": "^8.8.0",
		"reflect-metadata": "^0.1.13",
		"typeorm": "^0.3.11",
		"uuid": "^9.0.0",
		"yup": "^0.32.11"
	},
